.show{
	-webkit-animation: show 1s;
	        animation: show 1s;
}
@-webkit-keyframes show{
from{
		opacity: 0;
		top: 40px;
}
to{
		opacity: 1;
		top: 0;
}
}
@keyframes show{
from{
		opacity: 0;
		top: 40px;
}
to{
		opacity: 1;
		top: 0;
}
}

